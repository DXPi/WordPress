                "page"
            ]
        },

        {
            "name": "single",
            "title": "Single Post",
            "postTypes": [
                "post"
            ]
        },
        {
            "name": "single-product",
            "title": "Single Product",
            "postTypes": [
                "product"
            ]
        },
        {
            "name": "single-product-slider",
