            "postTypes": [
                "page"
            ]
        },

        {
            "name": "page-blank-additional",
            "title": "Page (No Title) Additional Header",
            "postTypes": [
                "page"
            ]
        },

        {
            "name": "page-blank-accent",
            "title": "Page (No Title) Accent Header",
            "postTypes": [
                "page"
            ]
        },

        {
            "name": "page-blank-transparent",
            "title": "Page (No Title) Transparent Header",
